# Example environment configuration for Biological Memory Pipeline
# Copy this file to .env and update with your actual values

# Database configuration
DATABASE_URL="postgresql://username:password@host:5432/database_name"
DB_CONN="postgresql://username:password@host:5432/database_name"
DB_NAME="database_name"
DB_USER="username"
DB_PASS="password"
HOST="192.168.1.xxx"

# Biological Memory Pipeline compatibility
POSTGRES_DB_URL="postgresql://username:password@host:5432/database_name"

# Test Database Configuration (rebuilds from scratch each run)
TEST_DATABASE_URL="postgresql://test_user:test_password@host:5432/test_database"
TEST_DB_NAME="test_database"
TEST_DB_USER="test_user"
TEST_DB_PASS="test_password"
TEST_DB_TEMPLATE="template0"
# Test database connection pool (smaller for test efficiency)
TEST_MAX_DB_CONNECTIONS=20

# Embedding Service Configuration
EMBEDDING_PROVIDER="ollama"
EMBEDDING_MODEL="nomic-embed-text"
EMBEDDING_BASE_URL="http://ollama-host:11434"
EMBEDDING_TIMEOUT_SECONDS=300

# LLM Model Configuration
OLLAMA_MODEL="gpt-oss:20b"
OLLAMA_GENERATION_TIMEOUT_SECONDS=300
OLLAMA_URL="http://ollama-host:11434"

# OpenAI API Key (backup - not used with Ollama)
OPENAI_API_KEY="your_openai_api_key_here"

# Server Configuration
HTTP_PORT=8080
MCP_PORT=13513

# Auto-migrate database on startup
AUTO_MIGRATE=false
MIGRATION_DIR="./migration/migrations"

# Logging
LOG_LEVEL="debug"

# MCP Authentication (disabled for testing)
MCP_AUTH_ENABLED=false

MCP_JWT_SECRET="your_jwt_secret_here"
MCP_CIRCUIT_BREAKER_ENABLED=false

# Database connection pool
MAX_DB_CONNECTIONS=160

# Optional: Database file location (for development)
DUCKDB_PATH="/path/to/biological_memory/dbs/memory.duckdb"

# Optional: dbt configuration
DBT_PROFILES_DIR="~/.dbt"
DBT_PROJECT_DIR="/path/to/biological_memory"