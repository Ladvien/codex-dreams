# Biological Memory Pipeline - Environment Configuration

# PostgreSQL Source Database
# IMPORTANT: Replace with your actual database connection details
# Use localhost for local installations, or your actual server IP/hostname
POSTGRES_DB_URL=postgresql://codex_user:your_password_here@localhost:5432/codex_db

# Alternative PostgreSQL configuration for DuckDB secrets
# These are used by some SQL scripts that create DuckDB secrets
POSTGRES_HOST=localhost
POSTGRES_DB=codex_db
POSTGRES_USER=codex_user
POSTGRES_PASSWORD=your_password_here

# Ollama LLM Server
# Use localhost for local installations, or your actual server IP/hostname
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:20b
EMBEDDING_MODEL=nomic-embed-text

# DuckDB Configuration
# Use relative paths or full paths as needed for your environment
DUCKDB_PATH=./biological_memory/dbs/memory.duckdb
LLM_CACHE_PATH=./biological_memory/dbs/llm_cache.duckdb

# Connection Configuration
MAX_DB_CONNECTIONS=160

# dbt Configuration
# Use paths appropriate for your environment
DBT_PROFILES_DIR=~/.dbt
DBT_PROJECT_DIR=./biological_memory

# Test Configuration
# For testing, use a separate database (preferably local for testing)
TEST_DATABASE_URL=postgresql://codex_user:your_password_here@localhost:5432/codex_test

# Circuit Breaker (optional)
MCP_CIRCUIT_BREAKER_ENABLED=false

# LLM Timeout Configuration
OLLAMA_TIMEOUT=300

# Biological Parameters (optional - can be set in dbt_project.yml instead)
# WORKING_MEMORY_CAPACITY=7
# STM_DURATION_MINUTES=30
# CONSOLIDATION_THRESHOLD=0.6
# HEBBIAN_LEARNING_RATE=0.1
# FORGETTING_RATE=0.05